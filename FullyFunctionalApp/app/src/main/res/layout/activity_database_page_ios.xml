<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatabasePageiOS">

    <TextView
        android:id="@+id/PageTitleDatabaseIOS"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="7dp"
        android:text="Database Technologies:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechNameIOS1"
            app:cardCornerRadius="250dp">

            <TextView
                android:id="@+id/SQLite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="SQLite" >
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechDescIOS1"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfSQLiteIOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="A file-based relational database management system that is integrated into iOS by default." >
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechNameIOS2"
            app:cardCornerRadius="250dp">

            <TextView
                android:id="@+id/CoreData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Core Data" >
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechDescIOS2"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfCoreData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="An object graph management and persistency framework used by iOS apps to manage data." >
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechNameIOS3"
            app:cardCornerRadius="250dp">

            <TextView
                android:id="@+id/Firebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Firebase" >
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechDescIOS3"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfFirebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="A real-time NoSQL cloud database that provides APIs for storing and synchronizing data across multiple clients.">
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>