<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    tools:context=".SecondPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="22dp"
            android:id="@+id/AndroidDevelopment"
            app:cardBackgroundColor="@color/purple_200">

            <TextView
                android:id="@+id/AndroidDev"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Android App Development" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/WebDevelopment"
            app:cardBackgroundColor="@color/purple_200">

            <TextView
                android:id="@+id/WebDev"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Web Development" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="22dp"
            android:id="@+id/iOSDevelopment"
            app:cardBackgroundColor="@color/purple_200">

            <TextView
                android:id="@+id/iOSDev"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="iOS Development" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/AI_ML"
            app:cardBackgroundColor="@color/purple_200">

            <TextView
                android:id="@+id/AIML"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="AI/ML" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="22dp"
            android:id="@+id/Blockchain"
            app:cardBackgroundColor="@color/purple_200">

            <TextView
                android:id="@+id/BlockChain"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Blockchain" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/CyberSecurity"
            app:cardBackgroundColor="@color/purple_200">

            <TextView
                android:id="@+id/Cybersecurity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Cyber Security" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnCallUs"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Call us" />

</LinearLayout>