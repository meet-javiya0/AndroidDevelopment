<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    tools:context=".SecondPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="5dp"
            android:id="@+id/AndroidDevelopment"
            app:cardBackgroundColor="@color/purple_200">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="35dp"
                app:cardCornerRadius="10dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/android_dev_logo"
                    android:contentDescription="@string/android_development_icon" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/AndroidDev"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="125dp"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/android_app_development"
                tools:ignore="RtlCompat" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="22dp"
            android:id="@+id/WebDevelopment"
            app:cardBackgroundColor="@color/purple_200">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="35dp"
                app:cardCornerRadius="10dp" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/web_dev_logo"
                    android:contentDescription="@string/web_development_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/WebDev"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="135dp"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/web_development"
                tools:ignore="RtlCompat" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="5dp"
            android:id="@+id/iOSDevelopment"
            app:cardBackgroundColor="@color/purple_200">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="35dp"
                app:cardCornerRadius="10dp" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ios_dev_logo"
                    android:contentDescription="@string/ios_development_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/iOSDev"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="135dp"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/ios_development"
                tools:ignore="RtlCompat" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="22dp"
            android:id="@+id/AI_ML"
            app:cardBackgroundColor="@color/purple_200">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="35dp"
                app:cardCornerRadius="10dp" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ai_ml_logo"
                    android:contentDescription="@string/ai_ml_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/AIML"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="135dp"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/ai_ml"
                tools:ignore="RtlCompat" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="5dp"
            android:id="@+id/Blockchain"
            app:cardBackgroundColor="@color/purple_200">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="35dp"
                app:cardCornerRadius="10dp" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/blockchain_logo"
                    android:contentDescription="@string/blockchain_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/BlockChain"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="135dp"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/blockchain"
                tools:ignore="RtlCompat" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="22dp"
            android:id="@+id/CyberSecurity"
            app:cardBackgroundColor="@color/purple_200">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="35dp"
                app:cardCornerRadius="10dp" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/cyber_security_logo"
                    android:contentDescription="@string/cyber_security_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Cybersecurity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="135dp"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/cyber_security"
                tools:ignore="RtlCompat" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnCallUs"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/call_us" />

</LinearLayout>