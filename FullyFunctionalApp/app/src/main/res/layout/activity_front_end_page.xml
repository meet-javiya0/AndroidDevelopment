<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FrontEndPageAndroid">

    <TextView
        android:id="@+id/PageTitleFrontEnd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="7dp"
        android:text="@string/front_end_technologies" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/FrontEndTechName1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_200"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="53dp"
                app:srcCompat="@drawable/java_logo_1"
                android:contentDescription="@string/java_logo" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="53dp"
                app:srcCompat="@drawable/kotlin_logo"
                android:contentDescription="@string/kotlin_logo" />

            <TextView
                android:id="@+id/JavaAndKotlin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_marginStart="50dp"
                android:text="@string/java_kotlin"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/FrontEndTechDesc1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_200"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfJavaAndKotlin"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="@string/java_kotlin_desc"
                android:textAlignment="center"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:id="@+id/FrontEndTechName2"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/xml_logo"
                android:contentDescription="@string/xml_logo" />

            <TextView
                android:id="@+id/XML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="138dp"
                android:layout_marginStart="70dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/xml" >
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:id="@+id/FrontEndTechDesc2"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfXML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="@string/xml_desc" >
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:id="@+id/FrontEndTechName3"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/android_sdk_logo"
                android:contentDescription="@string/android_sdk" />

            <TextView
                android:id="@+id/android_sdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_marginStart="48dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/android_sdk" >
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:id="@+id/FrontEndTechDesc3"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfAndroidSDK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="@string/android_sdk_desc" >
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>