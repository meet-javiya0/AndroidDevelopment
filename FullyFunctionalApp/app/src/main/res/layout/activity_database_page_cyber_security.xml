<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatabasePageCyberSecurity">

    <TextView
        android:id="@+id/PageTitleDatabaseCyberSecurity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="7dp"
        android:text="Database Technologies:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechNameCyberSecurity1"
            app:cardCornerRadius="250dp">

            <TextView
                android:id="@+id/MySQL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="MySQL" >
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechDescCyberSecurity1"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfMySQL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="An open-source relational database management system that is widely used for cyber security applications." >
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechNameCyberSecurity2"
            app:cardCornerRadius="250dp">

            <TextView
                android:id="@+id/MicrosoftSQLServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="Microsoft SQL Server" >
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechDescCyberSecurity2"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfMicrosoftSQLServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="A relational database management system developed by Microsoft that is used for cyber security applications." >
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechNameCyberSecurity3"
            app:cardCornerRadius="250dp">

            <TextView
                android:id="@+id/OracleDatabase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Oracle Database" >
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:id="@+id/DatabaseTechDescCyberSecurity3"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/DescOfOracleDatabase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="An object-relational database management system developed by Oracle that is widely used for cyber security development.">
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>